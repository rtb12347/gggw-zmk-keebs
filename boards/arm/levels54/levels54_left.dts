#include "levels54.dts"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <input/processors.dtsi>
#include <input/processors/xyz.dtsi>
#include <input/processors/report_rate_limit.dtsi>
#include <behaviors/rate_limit.dtsi>

/ {
  chosen {
    model = "levels54_left";
    compatible = "levels54_left";
  };

  aliases {
    led-red = &led0;
    led-green = &led1;
    led-blue = &led2;
  };

  leds {
    compatible = "gpio-leds";
    status = "okay";
    led0: led_0 {
      gpios = <&gpio1 10 GPIO_ACTIVE_LOW>;
    };
    led1: led_1 {
      gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
    };
    led2: led_2 {
      gpios = <&gpio0 28 GPIO_ACTIVE_LOW>;
    };
  };

	behaviors {
		rrl {
      #binding-cells = <1>;
      values-ms = <8 6 4 2>;
		};
  };
};

&kscan0 {
  compatible = "zmk,kscan-gpio-matrix";

  row-gpios
    = <&gpio0 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
    , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
    , <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
    , <&gpio0 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
    , <&gpio0 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
    ;

  col-gpios
    = <&gpio1 4 GPIO_ACTIVE_HIGH>
    , <&gpio1 6 GPIO_ACTIVE_HIGH>
    , <&gpio1 0 GPIO_ACTIVE_HIGH>
    , <&gpio1 2 GPIO_ACTIVE_HIGH>
    , <&gpio0 29 GPIO_ACTIVE_HIGH>
    , <&gpio0 20 GPIO_ACTIVE_HIGH>
    ;
};

&spi0 {
    cs-gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;

    trackball_peripheral: trackball_peripheral@0 {
        status = "okay";
        compatible = "pixart,pmw3610-efogtech";
        init-retry-interval = <20>;
        init-retry-count = <100>;
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&gpio0 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        cpi = <500>;
        evt-type = <INPUT_EV_REL>;
        x-input-code = <INPUT_REL_X>;
        y-input-code = <INPUT_REL_Y>;
        x-invert;
        y-invert;
        xy-swap;
        force-awake;
        /* keep the sensor awake while ZMK activity state is ACTIVE,
           fallback to normal downshift mode after ZMK goes into IDLE / SLEEP mode.
           thus, the sensor would be a `wakeup-source` */
    };
};

// Overrides for the input-split child node
&trackball_peripheral_split {
    device = <&trackball_peripheral>;
    input-processors
      = <&zip_xy_to_scroll_mapper>
      , <&zip_xyz>
      , <&zip_ble_report_rate_limit>;
};
